<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Название проекта -->
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название проекта"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Описание проекта -->
        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание проекта"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Финансовые данные -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvProjectBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бюджет: 100,000 ₽"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvProjectSpent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Потрачено: 45,000 ₽"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRemainingBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Осталось: 55,000 ₽"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Статус и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProjectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="6dp"
                    android:text="Активен"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvProjectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создан: 01.01.2024"
                android:textSize="12sp"
                android:textColor="?attr/colorSecondary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
